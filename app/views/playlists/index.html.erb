<div class="jumbotron page-header">
  <h1 class="text-center">Your Mixtapes</h1>
</div>

<nav id="topNav" class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: 'navbar-brand page-scroll' do %>
            <i class="fa fa-play"></i> MIXTAPES
          <% end %>
        </div>
        <div class="navbar-collapse collapse" id="bs-navbar">
            <ul class="nav navbar-nav">
                <li>
                  <%= link_to new_playlist_path, class: 'navbar-brand page-scroll' do %>
                    <i class="fa fa-add"></i> NEW MIXTAPE
                  <% end %>
                </li>
                <li>
                  <%= link_to playlists_path, class: 'navbar-brand page-scroll' do %>
                    Your Playlists
                  <% end %>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a class="page-scroll" data-toggle="modal" title="A free Bootstrap video landing theme" href="#aboutModal">About</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    <%- @playlists.reverse_each do |playlist| %>
      <div class="user-mixtapes">

        <ul class="media-list">
          <li class="media">
            <div class="media-left">
              <a href="#">
                <%= image_tag(playlist.image_url(:small), class: "small") unless playlist.image.blank? %>
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= playlist.mixtape_title if playlist.mixtape_title %></h4>
              <%= playlist.embed_link %>
            </div>
          </li>
        </ul>
          <%- if user_logged_in? %>
            <%= link_to playlist do %>
              <span class="fa fa-check" aria-hidden="true"></span>
            <% end %>
            <%= link_to edit_playlist_path(playlist) do %>
              <span class="fa fa-pencil" aria-hidden="true"></span>
            <% end %>
            <%= link_to playlist, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="fa fa-remove" aria-hidden="true"></span>
            <% end %>
          <% end %>
      </div>
    </div>
    <% end %>
