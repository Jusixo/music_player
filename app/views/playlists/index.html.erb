<div class="page-header">
  <%= link_to new_playlist_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Playlist
  <% end %>
  <h1 Listing>playlists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Embed link</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <table>
    <tbody class="table-body">
      <%- @playlists.each do |playlist| %>
      <tr>
        <td><%= image_tag(playlist.image_url(:large), class: "large") %></td>
        <td><iframe src="<%= playlist.embed_link %>" ></iframe></td>
        <iframe  width="" height=""></iframe>
        </td>
        <td>
          <%= link_to playlist do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_playlist_path(playlist) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to playlist, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


<section id="second" class="no-padding">
  <div class="container-fluid">
      <div class="row no-gutter">
        <%- @playlists.each do |playlist| %>
          <div class="col-lg-4 col-sm-6">
              <a href="#galleryModal" class="gallery-box center" data-toggle="modal">
                <%= image_tag(playlist.image_url(:medium), class: "mixtape_image") %>
                  <div class="gallery-box-caption">
                      <div class="gallery-box-content">
                          <div>
                              <i class="icon-lg fa fa-play-circle-o"></i>
                          </div>
                      </div>
                  </div>
              </a>
          </div>
      </div>
    <% end %>
    <div class="clearfix hidden-lg"> </div>
  </div>
</section>
