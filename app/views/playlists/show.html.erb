<div class="page-header">
  <%= link_to playlists_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_playlist_path(@playlist), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show playlist</h1>
</div>

<dl class="dl-horizontal">
  <dt>Embed link:</dt>
  <dd><%= @playlist.embed_link %></dd>

  <dt>Image:</dt>
  <% if @playlist.image.present? %>
    <dd><%= image_tag(@playlist.image_url(:medium)) %></dd>
  <%else %>
    <dd><%= image_tag("images/mixtape.jpg", :width => 64, :height => 64) %></dd>
  <% end %>
</dl>
