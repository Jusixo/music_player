<div class="page-header">
  <%= link_to playlists_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_playlist_path(@playlist), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show playlist</h1>
</div>

<dl class="dl-horizontal">
  <dt>Mixtape Title:</dt>
  <dd><%= @playlist.mixtape_title %></dd>

  <dt>Embed link:</dt>
  <dd><%= @playlist.embed_link %></dd>

  <dt>Image:</dt>
  <%= image_tag(@playlist.image_url(:large), class: "large") unless @playlist.image.blank? %>
</dl>
