<%- @playlists.reverse_each do |playlist| %>
  <div class="no-gutter">
    <div class="col-lg-4 col-sm-6">
      <a href="#galleryModal" class="gallery-box center" data-toggle="modal" data-target=".playlist-modal-<%= playlist.id %>">
        <%= image_tag(playlist.image_url(:medium), class: "mixtape_image") unless playlist.image.blank? %>
        <div class="mix-title"><%= playlist.mixtape_title if playlist.mixtape_title %></div>
        <div class="gallery-box-caption">
            <div class="gallery-box-content">
              <div>
                <i class="icon-lg fa fa-play-circle-o"></i>
              </div>
            </div>
        </div>
      </a>
    </div>
  </div>
  <div id="galleryModal" class="modal fade playlist-modal-<%= playlist.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <iframe src="<%= playlist.embed_link %>" width="870" height="500" frameborder="0" allowtransparency="true"></iframe>
          <br>
          <p>
              <br/>
              <button class="btn btn-primary btn-lg center-block" data-dismiss="modal" aria-hidden="true">Close <i class="fa fa-times-circle-o"></i></button>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
